.container {
  width: 100%;
}
.lp-nav {
  display: flex;
  height: 150rpx;
  padding: 20px 10px;
}
.lp-nav .lp-nav-content {
  height: 100%;
}
.lp-title {
  color: lightpink;
}
.shoping {
  display: grid;
  grid-template-columns: repeat(3, 33.3%);
  grid-template-rows: 50% 50%;
  height: 360rpx;
  width: 100%;
}
.shoping image {
  width: 100%;
  height: 100%;
}
